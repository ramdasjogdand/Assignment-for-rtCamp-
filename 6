
start_site() {
    echo "Starting the site..."
    docker-compose up -d
}

stop_site() {
    echo "Stopping the site..."
    docker-compose down
}

if [ "$1" == "start" ]; then
    start_site
elif [ "$1" == "stop" ]; then
    stop_site
else
    echo "Invalid command. Please use 'start' or 'stop'."
fi
